{
    "manifest_version": 3,
    "name": "FireLink",
    "version": "1.5",

    "description": "Creates sharable links with a click of a button",

    "icons": {
        "48": "icons/icon48.png",
        "32": "icons/icon32.png",
        "96": "icons/icon96.png"
    },

    "permissions": ["activeTab"],

    "action": {
        "default_icon": "icons/icon32.png",
        "default_title": "Share",
        "default_popup": "popup/index.html"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "{a2664c2f-2092-4cc4-871b-56412a1f95f9}"
        }
    }
}
