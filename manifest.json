{
  "manifest_version": 2,
  "name": "Firelink",
  "version": "1.0",

  "description": "creates sharable links with a click of a button",

  "icons": {
    "48": "icons/icon48.png",
    "32": "icons/icon32.png",
    "96": "icons/icon96.png"
  },

  "permissions": ["activeTab"],

  "browser_action": {
    "default_icon": "icons/icon32.png",
    "default_title": "Share",
    "default_popup": "popup/index.html"
  }
}
